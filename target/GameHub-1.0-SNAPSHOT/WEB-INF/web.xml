<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpController</servlet-name>
        <servlet-class>Controller.SignUpController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveUserServlet</servlet-name>
        <servlet-class>Controller.RemoveUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddGameController</servlet-name>
        <servlet-class>Controller.AddGameController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReadGameController</servlet-name>
        <servlet-class>Controller.ReadGameController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReadGameHomeController</servlet-name>
        <servlet-class>Controller.ReadGameHomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowAllGameController</servlet-name>
        <servlet-class>Controller.ShowAllGameController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SuspendUserController</servlet-name>
        <servlet-class>Controller.SuspendUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UnSuspendUserController</servlet-name>
        <servlet-class>Controller.UnSuspendUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePasswordController</servlet-name>
        <servlet-class>Controller.ChangePasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadPhotoController</servlet-name>
        <servlet-class>Controller.UploadPhotoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpController</servlet-name>
        <url-pattern>/SignUpController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddGameController</servlet-name>
        <url-pattern>/AddGameController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReadGameController</servlet-name>
        <url-pattern>/ReadGameController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReadGameHomeController</servlet-name>
        <url-pattern>/ReadGameHomeController</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>ReadGameHomeController</welcome-file>
        <!-- Change to your welcome file -->
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>ShowAllGameController</servlet-name>
        <url-pattern>/ShowAllGameController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuspendUserController</servlet-name>
        <url-pattern>/SuspendUserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UnSuspendUserController</servlet-name>
        <url-pattern>/UnSuspendUserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveUserServlet</servlet-name>
        <url-pattern>/RemoveUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePasswordController</servlet-name>
        <url-pattern>/ChangePasswordController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadPhotoController</servlet-name>
        <url-pattern>/UploadPhotoController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
